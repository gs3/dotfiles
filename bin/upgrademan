#!/bin/zsh

brew_up () {
  brew update
  brew upgrade
  brew cleanup

  cd $HOME/src/github.com/ravelll/dotfiles
  brew brewdler dump --force
}

vim_up () {
  brew reinstall vim --with-lua --with-luajit --with-mzscheme --HEAD
}

node_up () {
  nodebrew selfupdate
  nodebrew install-binary latest
}

php_up () {
  cd ~/.phpenv/plugins/php-build
  git pull origin master
}

ruby_up () {
  cd ~/.rbenv/plugins/ruby-build
  git pull origin master
}

perl_up () {
  cd ~/.plenv/plugins/perl-build
  git pull origin master
}

main () {
  brew_up
  vim_up
  node_up
  php_up
  ruby_up
  perl_up
}

main
