{
 "languageserver": {
   "dls": {
     "command": "diagnostic-languageserver",
     "args": ["--stdio"],
     "filetypes": ["go"],
     "initializationOptions": {
       "linters": {
         "revive": {
           "command": "revive",
           "rootPatterns": [],
           "isStdout": true,
           "isStderr": false,
           "debounce": 100,
           "args": ["%filepath"],
           "offsetLine": 0,
           "offsetColumn": 0,
           "sourceName": "revive",
           "formatLines": 1,
           "formatPattern": [
             "^[^:]+:(\\d+):(\\d+):\\s(.*)$",
             {
               "line": 1,
               "column": 2,
               "message": [3]
             }
           ]
         }
       },
       "formatters": {},
       "filetypes": {
         "go": "revive"
       },
       "formatFiletypes": {}
     }
   }
 }
}
